<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pluu.buildvariantsample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DemoMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="${applicationId}.DuplicationActivity"
            android:label="@string/title_activity_duplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="${applicationId}.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
